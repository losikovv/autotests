      <class name="ru.instamart.tests.api.v1.contracts.Orders"/>
    </classes>
  </test> <!-- api-v1-tests -->
  <test verbose="1" name="API v2 Tests" parallel="classes" thread-count="2">
    <classes>
      <class name="ru.instamart.tests.api.v2.endpoints.Taxons"/>
      <class name="ru.instamart.tests.api.v2.endpoints.Searches"/>
      <class name="ru.instamart.tests.api.v2.endpoints.Products"/>
      <class name="ru.instamart.tests.api.v2.endpoints.Orders"/>
      <class name="ru.instamart.tests.api.v2.endpoints.Stores"/>
      <class name="ru.instamart.tests.api.v2.endpoints.LineItems"/>
      <class name="ru.instamart.tests.api.v2.endpoints.Users"/>
      <class name="ru.instamart.tests.api.v2.endpoints.Sessions"/>
      <class name="ru.instamart.tests.api.v2.endpoints.FavoritesList"/>
      <class name="ru.instamart.tests.api.v2.endpoints.Taxons"/>
      <class name="ru.instamart.tests.api.v2.endpoints.OnboardingPages"/>
      <class name="ru.instamart.tests.api.v2.endpoints.PaymentTools"/>
      <class name="ru.instamart.tests.api.v2.endpoints.Promotions"/>
