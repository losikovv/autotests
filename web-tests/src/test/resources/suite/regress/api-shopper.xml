<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="REST API Suite" parallel="tests" thread-count="2" data-provider-thread-count="20">
    <listeners>
        <listener class-name="ru.instamart.core.listener.ExecutionListenerImpl"/>
        <listener class-name="ru.instamart.api.listener.ApiListener"/>
    </listeners>
    <test verbose="1" name="API Shopper App Tests" parallel="none" thread-count="2">
        <classes>
            <!--class name="ru.instamart.tests.api.shopper.app.e2e.ShopperAppE2ETest"/>
            <class name="ru.instamart.tests.api.shopper.app.endpoints.ShipmentfulShopperAppTest"/-->
            <class name="ru.instamart.tests.api.shopper.app.endpoints.ShipmentlessShopperAppTest"/>
            <class name="ru.instamart.tests.api.shopper.app.endpoints.ShopperAppWithoutAuthTest"/>
        </classes>
    </test>
    <test verbose="1" name="API Shopper Admin Tests" parallel="none" thread-count="2">
        <classes>
            <class name="ru.instamart.tests.api.shopper.admin.endpoints.ShopperAdminWithAuthTest"/>
            <class name="ru.instamart.tests.api.shopper.admin.endpoints.ShopperAdminWithoutAuthTest"/>
        </classes>
    </test>
</suite>
