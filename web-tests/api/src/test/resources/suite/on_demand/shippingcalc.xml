<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SHIPPINGCALC API SUITE" parallel="tests" thread-count="1">
    <listeners>
        <listener class-name="ru.instamart.api.listener.on_demand.ShippingCalcExecutionListener"/>
        <listener class-name="ru.instamart.api.listener.ApiTestSuiteListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <test verbose="1" name="SHIPPINGCALC MAIN API" parallel="classes" thread-count="4">
        <classes>
            <class name="ru.instamart.test.api.on_demand.shippingcalc.StrategyTest"/>
            <class name="ru.instamart.test.api.on_demand.shippingcalc.ScriptTest"/>
            <class name="ru.instamart.test.api.on_demand.shippingcalc.DeliveryPriceTest"/>
            <class name="ru.instamart.test.api.on_demand.shippingcalc.MinCartTest"/>
        </classes>
    </test>
    <test verbose="1" name="SHIPPINGCALC SECONDARY API" parallel="classes" thread-count="1">
        <classes>
<!--            <class name="ru.instamart.test.api.on_demand.shippingcalc.IntervalsTest"/>-->
        </classes>
    </test>
