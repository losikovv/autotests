<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="REST API Suite" parallel="tests" thread-count="15">
    <listeners>
        <listener class-name="ru.instamart.api.listener.ApiAuthorizationServiceListener"/>
        <listener class-name="ru.instamart.api.listener.ApiTestSuiteListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <test verbose="1" name="Authorization Service API Tests" parallel="none" thread-count="1">
        <classes>
            <class name="ru.instamart.test.api.authorization_service.PolicyTest"/>
            <class name="ru.instamart.test.api.authorization_service.RealmTest"/>
            <class name="ru.instamart.test.api.authorization_service.PermissionsTest"/>
            <class name="ru.instamart.test.api.authorization_service.AuthorizationTest"/>
        </classes>
    </test>
</suite>
