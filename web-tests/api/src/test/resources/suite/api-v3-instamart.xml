<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="REST API Suite" parallel="tests" thread-count="30" data-provider-thread-count="10">
    <listeners>
        <listener class-name="ru.instamart.api.listener.ApiExecutionListener"/>
        <listener class-name="ru.instamart.api.listener.ApiListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <!-- api-v3-tests -->
    <test verbose="1" name="API v3 Tests" parallel="classes" thread-count="15">
        <classes>
            <class name="ru.instamart.test.api.v3.endpoints.StoresV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.SetupInfoV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.OrderOptionsV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.OrdersDeliveryV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.GetOrderV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.PutOrdersStatusV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.OrdersPickupFromStoreV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.CategoriesV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.ProductsV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.NotificationsNegativeV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.NotificationsPositiveV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.NotificationsPositionsV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.AppConfigurationsV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.CheckoutV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.CurrentTimeV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.DepartmentsV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.FavoritesListV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.FeatureFlagsV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.MarketingCategoriesV3Test"/>
        </classes>
    </test>
</suite>

