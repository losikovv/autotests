<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="DISPATCH Suite" parallel="tests" thread-count="1">
    <listeners>
        <listener class-name="ru.instamart.api.listener.ApiExecutionListener"/>
        <listener class-name="ru.instamart.api.listener.ApiListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <test verbose="1" name="WORKFLOW" parallel="classes" thread-count="2">
        <classes>
            <class name="ru.instamart.test.api.dispatch.workflow.WorkflowTest"/>
            <class name="ru.instamart.test.api.dispatch.workflow.TimeoutWorkflowTest"/>
        </classes>
    </test>
    <test verbose="1" name="ETA" parallel="classes" thread-count="6">
        <classes>
            <class name="ru.instamart.test.api.dispatch.eta.StoreEtaTest"/>
            <class name="ru.instamart.test.api.dispatch.eta.BasketEtaTest"/>
            <class name="ru.instamart.test.api.dispatch.eta.CourierEtaTest"/>
            <class name="ru.instamart.test.api.dispatch.eta.RetailerParametersEtaTest"/>
            <class name="ru.instamart.test.api.dispatch.eta.StoreParametersEtaTest"/>
            <class name="ru.instamart.test.api.dispatch.eta.ServiceParametersEtaTest"/>
        </classes>
    </test>
    <test verbose="1" name="SHIPPINGCALC" parallel="classes" thread-count="1">
        <classes>
            <class name="ru.instamart.test.api.dispatch.shippingcalc.CreateStrategyTest"/>
        </classes>
    </test>
    <test verbose="1" name="KAFKA">
        <classes>
            <class name="ru.instamart.test.api.dispatch.KafkaDispatchTest"/>
        </classes>
    </test>
</suite>

