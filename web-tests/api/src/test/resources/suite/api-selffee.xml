<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="REST API Suite" parallel="tests" thread-count="4" data-provider-thread-count="20">
    <listeners>
        <listener class-name="ru.instamart.api.listener.ApiExecutionListener"/>
        <listener class-name="ru.instamart.api.listener.ApiTestSuiteListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <!-- api-v1-tests -->
    <test verbose="1" name="API HR OPS Self-Fee Tests" parallel="none" thread-count="1">
        <classes>
            <class name="ru.instamart.test.api.self_fee.SelfFeeTest"/>
            <class name="ru.instamart.test.api.self_fee.ValidateFilesInfoTest"/>
            <class name="ru.instamart.test.api.self_fee.SuccessfulFiscalizationsTest"/>
            <class name="ru.instamart.test.api.self_fee.GetFiscalizationsTest"/>
            <class name="ru.instamart.test.api.self_fee.ReceivingPayoutFilesTest"/>
            <class name="ru.instamart.test.api.self_fee.FiscalizationErrorTest"/>
            <class name="ru.instamart.test.api.self_fee.XlsxRegistryErrorsTest"/>
        </classes>
    </test>
</suite>