<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="REST API Suite" parallel="tests" thread-count="30" data-provider-thread-count="20">
    <listeners>
        <listener class-name="ru.instamart.api.listener.ApiExecutionListener"/>
        <listener class-name="ru.instamart.api.listener.ApiListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <!-- api-v1-tests -->
    <test verbose="1" name="API v1 Tests" parallel="none" thread-count="5">
        <classes>
            <class name="ru.instamart.test.api.v1.contracts.OffersV1Tests"/>
            <class name="ru.instamart.test.api.v1.contracts.OperationalZonesV1Tests"/>
            <class name="ru.instamart.test.api.v1.contracts.OrdersV1Test"/>
            <class name="ru.instamart.test.api.v1.contracts.RetailersV1Tests"/>
            <class name="ru.instamart.test.api.v1.contracts.StoresV1Tests"/>
            <class name="ru.instamart.test.api.v1.endpoints.UserCompaniesV1Tests"/>
            <class name="ru.instamart.test.api.v1.endpoints.CompanyPresenceV1Tests"/>
            <class name="ru.instamart.test.api.v1.endpoints.LegalEntityV1Tests"/>
            <class name="ru.instamart.test.api.v1.endpoints.CompaniesV1Tests"/>
        </classes>
    </test>
    <!-- api-v2-tests -->
    <test verbose="1" name="API v2 Tests" parallel="classes" thread-count="20">
        <classes>
            <class name="ru.instamart.test.api.v2.endpoints.AuthProviderV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.ExternalPartnersV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.CreditCardsV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.FavoritesListMoreSessionV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.FavoritesListV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.LegalEntityV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.OrdersV2Test"/>
<!--            <class name="ru.instamart.test.api.v2.endpoints.OrdersComplexCollectV2Test"/>-->
            <class name="ru.instamart.test.api.v2.endpoints.PhoneConfirmationsV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.ProductsV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.PromotionLimitV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.PromotionsV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.RecsV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.ReplacementPoliciesV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.ReviewableShipmentV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.ReviewableShipmentWithoutFinishedOrderV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.SearchesV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.ShipAddressV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.ShipmentsV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.SimpleAdsV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.SimpleRecsV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.StoresV2Test"/>
            <class name="ru.instamart.test.api.v2.e2e.OrderE2ETests"/>
        </classes>
    </test>
    <!-- api-v3-tests -->
    <test verbose="1" name="API v3 Tests" parallel="classes" thread-count="5">
        <classes>
            <class name="ru.instamart.test.api.v3.endpoints.StoresV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.SetupInfoV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.OrderOptionsV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.OrdersDeliveryV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.GetOrderV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.PutOrdersStatusV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.OrdersPickupFromStoreV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.CategoriesV3Test"/>
        </classes>
    </test>
    <test verbose="1" name="API Delivery Club Tests" parallel="classes" thread-count="3">
        <classes>
            <class name="ru.instamart.test.api.delivery_club.endpoints.AuthenticationDCTest"/>
            <class name="ru.instamart.test.api.delivery_club.endpoints.StoresWithAuthDCTest"/>
            <class name="ru.instamart.test.api.delivery_club.endpoints.StoresWithoutAuthDCTest"/>
        </classes>
    </test>

    <!-- api-kube-tests  -->
    <test verbose="1" name="API KUBERNETES Tests" parallel="classes" thread-count="1">
        <classes>
            <class name="ru.instamart.test.api.KubernetesClientTest"/>
        </classes>
    </test>
</suite>
