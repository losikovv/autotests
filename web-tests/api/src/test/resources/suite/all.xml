<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="MR UI-API suite">
    <listeners>
        <listener class-name="ru.instamart.api.listener.ApiExecutionListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <test verbose="1" name="All In UI-API suite" parallel="classes" thread-count="5">
        <classes>
            <class name="ru.instamart.test.api.v2.endpoints.SearchesV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.ProductsV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.OrdersV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.StoresV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.FavoritesListV2Test"/>
            <class name="ru.instamart.test.api.v2.endpoints.PromotionsV2Test"/>
            <class name="ru.instamart.test.api.v2.e2e.StoreE2ETests"/>
            <class name="ru.instamart.test.api.v2.e2e.ZoneE2ETests"/>
            <class name="ru.instamart.test.api.v2.e2e.RetailerE2ETests"/>
            <class name="ru.instamart.test.api.v2.e2e.OrderE2ETests"/>
            <class name="ru.instamart.test.api.shopper.app.endpoints.ShipmentfulShopperAppTest"/>
            <class name="ru.instamart.test.api.shopper.app.endpoints.ShipmentlessShopperAppTest"/>
            <class name="ru.instamart.test.api.shopper.app.e2e.ShopperAppE2ETest"/>
        </classes>
    </test> <!-- mr-tests -->
</suite> <!-- Custom suite -->
