<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="REST API Suite" parallel="tests" thread-count="30" data-provider-thread-count="10">
    <listeners>
        <listener class-name="ru.instamart.api.listener.ApiExecutionListener"/>
        <listener class-name="ru.instamart.api.listener.ApiTestSuiteListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <!-- api-v3-tests -->
    <test verbose="1" name="API v3 Tests" parallel="classes" thread-count="3">
        <classes>
            <class name="ru.instamart.test.api.v3.endpoints.NotificationsNegativeV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.NotificationsBySbermarketV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.NotificationsByRetailerV3Test"/>
            <class name="ru.instamart.test.api.v3.endpoints.NotificationsPositionsV3Test"/>
        </classes>
    </test>
</suite>

