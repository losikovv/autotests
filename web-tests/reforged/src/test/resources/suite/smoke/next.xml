<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Web UI smoke next" data-provider-thread-count="5">
    <listeners>
        <listener class-name="ru.instamart.reforged.core.listener.UiExecutionListener"/>
        <listener class-name="ru.instamart.reforged.core.listener.UiListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <test verbose="1" name="Web UI tests next" parallel="classes" thread-count="5">
        <classes>
            <class name="ru.instamart.test.reforged.next.BasicSbermarketTests"/>

            <class name="ru.instamart.test.reforged.next.user.UserAuthorisationTests"/>
            <class name="ru.instamart.test.reforged.next.user.UserFavoritesTests"/>
            <class name="ru.instamart.test.reforged.next.user.UserLogoutTests"/>
        </classes>
    </test>
</suite>
