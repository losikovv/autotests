<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Web business UI smoke" data-provider-thread-count="5">
    <listeners>
        <listener class-name="ru.instamart.reforged.core.listener.UiExecutionListener"/>
        <listener class-name="ru.instamart.reforged.core.listener.UiListener"/>
    </listeners>
    <method-selectors>
        <method-selector>
            <selector-class name="ru.instamart.kraken.listener.TestMethodSelector"/>
        </method-selector>
    </method-selectors>
    <test verbose="1" name="Web business UI tests" parallel="classes" thread-count="3">
        <classes>
            <class name="ru.instamart.test.reforged.business.UserAuthorisationBusinessTests"/>
            <class name="ru.instamart.test.reforged.business.CheckoutTests"/>
            <class name="ru.instamart.test.reforged.business.ShoppingCatalogTests"/>
        </classes>
    </test>
</suite>